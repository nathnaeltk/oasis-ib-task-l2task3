<%- include("header") -%>

<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box" >
            
            <% taskInput.forEach(task => { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input name="checkBox" value="<%= task._id %>" onChange = "this.form.submit()" type="checkbox" >
                        <p><%= task.name %></p>
                    </div>
                </form>
            <% }) %>

        <form action= "/" method="post">
            <input autocomplete="off" type="text" name="taskInput" placeholder="Input task">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>


    </div>
    
</body>

<%- include("footer") -%>

</html>